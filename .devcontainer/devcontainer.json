{
	"name": "Go",
	"image": "mcr.microsoft.com/devcontainers/go:0-1.20",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "latest"
		}
	},
	"forwardPorts": [
		25565
	],
	"postCreateCommand": ".devcontainer/postcreate.sh",
	"customizations": {
		"vscode": {
			"settings": {
				"go.lintFlags": [
					"-exclude=EXC0002"
				]
			}
		}
	}
}